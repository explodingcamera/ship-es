{
  "name": "ship-es",
  "version": "0.2.0",
  "description": "",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "type": "module",
  "main": "lib/index.js",
  "repository": "explodingcamera/ship-es",
  "types": "lib/index.d.ts",
  "bin": {
    "ship-es": "./bin/run.mjs",
    "shipes": "./bin/run.mjs"
  },
  "exports": {
    ".": "./lib/index.js",
    "./lib/*": "./lib/*"
  },
  "files": [
    "./lib/*",
    "./bin/*"
  ],
  "scripts": {
    "build": "npm run build:esbuild && npm run types",
    "watch": "npm run build:esbuild -- --watch",
    "build:esbuild": "esbuild src/*.ts --minify --bundle --splitting --chunk-names=chunks/[name]-[hash] --outdir=lib --platform=node --external:archiver --external:micromatch --external:esbuild --external:tar --external:write-file-atomic --target=node16 --format=esm",
    "dev": "node --loader=ts-node/esm --no-warnings src/index.ts",
    "release": "release-it",
    "test": "tap --ts --node-arg=--no-warnings --node-arg=--loader=ts-node/esm",
    "snapshot": "TAP_SNAPSHOT=1 npm run test",
    "types": "tsc -p tsconfig.build.json",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "@explodingcamera/eslint-config": "^21.0.1",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^17.0.17",
    "@types/tap": "^15.0.5",
    "@types/write-file-atomic": "^3.0.3",
    "@types/yargs": "^17.0.8",
    "esbuild": "^0.14.21",
    "eslint": "^8.8.0",
    "release-it": "^14.12.4",
    "tap": "^15.1.6",
    "ts-node": "^10.5.0",
    "type-fest": "^2.11.2",
    "typescript": "^4.5.5",
    "yargs": "github:yargs/yargs"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "@types/archiver": "^5.3.1",
    "archiver": "^5.3.0",
    "micromatch": "^4.0.4",
    "write-file-atomic": "^4.0.1"
  }
}
