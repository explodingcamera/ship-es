{
  "name": "ship-es",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "ship-es": "./bin/run.mjs"
  },
  "files": [
    "./lib/"
  ],
  "scripts": {
    "build": "npm run build:esbuild && npm run types",
    "build:esbuild": "esbuild src/*.ts --minify --bundle --splitting --chunk-names=chunks/[name]-[hash] --outdir=lib --platform=node --external:react --target=node16 --format=esm",
    "dev": "node --loader=ts-node/esm --no-warnings src/index.ts",
    "release": "release-it",
    "test": "tap --ts --node-arg=--no-warnings --node-arg=--loader=ts-node/esm",
    "snapshot": "TAP_SNAPSHOT=1 npm run test",
    "types": "tsc -p tsconfig.build.json",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "@explodingcamera/eslint-config": "^21.0.0",
    "@types/dockerode": "^3.3.3",
    "@types/node": "^17.0.14",
    "@types/tap": "^15.0.5",
    "@types/yargs": "^17.0.8",
    "dockerode": "^3.3.1",
    "esbuild": "^0.14.16",
    "eslint": "^8.8.0",
    "release-it": "^14.12.4",
    "tap": "^15.1.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "yargs": "^17.3.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
